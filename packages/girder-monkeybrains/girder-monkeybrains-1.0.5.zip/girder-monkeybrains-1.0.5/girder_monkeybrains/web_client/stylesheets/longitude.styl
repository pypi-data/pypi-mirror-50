.chart
  font-family "Droid Sans", sans-serif
  font-size 12px

.axis path, .axis line
  fill none
  stroke #000
  shape-rendering crispEdges

.g-collection-infopage-longitude
  width 100%
  height 600px
  position relative

.infopage-longitude-tooltip
  display none
  background #eee
  box-shadow 0 0 5px #999999
  color #333
  font-size 12px
  padding 10px
  position absolute
  text-align center
  top 95px
  width 150px
  z-index 10

.longitude-tooltip-event
  font-weight bold
  font-size 14px

.longitude-tooltip-data
  display table
  width 90%

.longitude-tooltip-data-row
  display table-row

.longitude-tooltip-key
  font-weight bold
  text-align left
  width 60%
  display table-cell

.longitude-tooltip-value
  text-align right
  width 40%
  display table-cell

.female-event
  stroke-width 4
  stroke-linejoin round // @stylint ignore

.female-event:hover
  stroke-width 5

.male-event:hover
  stroke-width 4

.birth
  fill #8c510a
  stroke #8c510a

.scan-weight-1
  fill rgb(237, 248, 177)
  stroke rgb(237, 248, 177)

.scan-weight-2
  fill rgb(199, 233, 180)
  stroke rgb(199, 233, 180)

.scan-weight-3
  fill rgb(127, 205, 187)
  stroke rgb(127, 205, 187)

.scan-weight-4
  fill rgb(65, 182, 196)
  stroke rgb(65, 182, 196)

.scan-weight-5
  fill rgb(29, 145, 192)
  stroke rgb(29, 145, 192)

.scan-weight-6
  fill rgb(34, 94, 168)
  stroke rgb(34, 94, 168)

.scan-weight-7
