
from typing import Optional
from pydantic import BaseModel


class ResponseModel(BaseModel):
    msg: str
    mongo_client: Optional[str] = None
    sql_client: Optional[str] = None
    async_sql_client: Optional[str] = None


def handle(context, msg):
    response = ResponseModel(
        msg=msg,
        mongo_client=str(context.mongodb),
        sql_client=str(context.sql),
        async_sql_client=str(context.async_sql)
    )
    return response

